    "scripts": {
        "install-dependencies": "if [ ! -d node_modules ]; then npm install && npx npm-install-peers; fi",
        "install-dependencies:win32": "npm install && npx npm-install-peers",
        "prebuild": "npm run install-dependencies",
        "build": "rollup -c scripts/rollup.config.js",
        "storybook": "start-storybook -p 9001 -c .storybook -s ./static",
        "lint": "eslint src/",
        "lint:fix": "eslint --fix src/",
        "test": "export SKIP_PREFLIGHT_CHECK=true && react-scripts test --env=jsdom",
        "test:ci": "CI=true react-scripts test --env=jsdom",
        "start": "npm run storybook"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint"
        }
